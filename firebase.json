{
  "hosting": {
    "public": "web",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "**", "destination": "/index.html" }
    ]
  },
  "firestore": {
    "database": "(default)",
    "location": "eur3",
    "rules": "web/firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "hosting": { "port": 5000 },
    "firestore": { "port": 8080 }
  }
}
